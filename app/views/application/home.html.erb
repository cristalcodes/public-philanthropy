<h1>Public Philanthropy</h1>

<% if user_signed_in? %>
<h2>Hello <%= current_user.name %></h2>
<% end %>

  <% if current_user.donations.empty? %>
    You have not logged any donations.
  <% else  %>
    <p>Your Donations</p>
    <ul>
      <% current_user.donations.each do |donation| %>
      <li> <%= donation.date %> | <%= donation.organization.name%> | <%= donation.amount %> | <%= link_to "See full details", user_donation_path(donation.user, donation) %> </li>
      <% end %>
    </ul>

  <% end  %>
